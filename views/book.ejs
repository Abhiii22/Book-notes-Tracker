<%- include('partials/header') %>
        <div class="book-detail">
            <% if (coverUrl) { %>
                <div class="book-cover">
                    <img src="<%= coverUrl %>" alt="Cover of <%= book.title %>">
                </div>
            <% } %>
            
            <div class="book-info">
                <h2><%= book.title %></h2>
                <p class="author">by <%= book.author %></p>
                
                <% if (book.rating) { %>
                    <div class="rating">
                        <% for (let i = 0; i < 5; i++) { %>
                            <span class="star <%= i < book.rating ? 'filled' : '' %>">â˜…</span>
                        <% } %>
                    </div>
                <% } %>
                
                <% if (book.date_read) { %>
                    <p class="date-read">Read: <%= new Date(book.date_read).toLocaleDateString() %></p>
                <% } %>
                
                <div class="actions">
                    <a href="/books/<%= book.id %>/edit" class="btn">Edit</a>
                    <form action="/books/<%= book.id %>?_method=DELETE" method="POST" class="delete-form">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        
        <% if (book.notes) { %>
            <div class="notes-section">
                <h3>Notes</h3>
                <div class="notes-content"><%= book.notes %></div>
            </div>
        <% } %>
<%- include('partials/footer') %>