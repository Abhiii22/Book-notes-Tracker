<%- include('partials/header') %>
        <section class="sort-options">
            <h2>Sort by:</h2>
            <a href="/?sort=date_read" class="<%= sortBy === 'date_read' ? 'active' : '' %>">Date Read</a>
            <a href="/?sort=rating" class="<%= sortBy === 'rating' ? 'active' : '' %>">Rating</a>
            <a href="/?sort=title" class="<%= sortBy === 'title' ? 'active' : '' %>">Title</a>
        </section>

        <section class="books-grid">
            <% books.forEach(book => { %>
                <div class="book-card">
                    <a href="/books/<%= book.id %>">
                        <h3><%= book.title %></h3>
                        <p class="author">by <%= book.author %></p>
                        <% if (book.rating) { %>
                            <div class="rating">
                                <% for (let i = 0; i < 5; i++) { %>
                                    <span class="star <%= i < book.rating ? 'filled' : '' %>">â˜…</span>
                                <% } %>
                            </div>
                        <% } %>
                        <% if (book.date_read) { %>
                            <p class="date-read">Read: <%= new Date(book.date_read).toLocaleDateString() %></p>
                        <% } %>
                    </a>
                </div>
            <% }); %>
        </section>
<%- include('partials/footer') %>